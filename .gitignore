# ------------------------
# WordPress uploads and cache
# ------------------------
wp-content/uploads/        # Ignore media uploads (images, videos, etc.) - usually huge and not needed in Git
wp-content/cache/          # Ignore cache files generated by plugins or WP itself
wp-content/upgrade/        # Ignore WordPress core or plugin upgrade temporary files
wp-content/backups/        # Ignore any backup files you might store here

# ------------------------
# Logs
# ------------------------
*.log                      # Ignore any log files (errors, plugin logs, etc.)

# ------------------------
# OS-specific files
# ------------------------
.DS_Store                  # macOS system file, unnecessary
Thumbs.db                  # Windows system file, unnecessary

# ------------------------
# IDE/editor files
# ------------------------
.vscode/                   # VSCode workspace settings
.idea/                      # PHPStorm/IntelliJ workspace settings

# ------------------------
# Node modules
# ------------------------
node_modules/              # Ignore Node.js dependencies everywhere
wp-content/themes/**/node_modules/   # Ignore node_modules inside themes
wp-content/plugins/**/node_modules/ # Ignore node_modules inside plugins

# ------------------------
# Ignore all index.php except important ones
# ------------------------
**/index.php               # Ignore every index.php recursively by default
!wp-content/themes/**/index.php      # But keep index.php in themes (important for PHP code or security)
!wp-content/plugins/**/index.php     # Keep index.php in plugins
!wp-content/index.php               # Keep the top-level wp-content/index.php (prevents directory browsing)

# ------------------------
# Keep themes and plugins tracked
# ------------------------
!wp-content/themes/        # Track all themes
!wp-content/plugins/       # Track all plugins

# ------------------------
# Ignore other unnecessary files in plugins/themes
# ------------------------
wp-content/themes/**/README.md      # Ignore theme documentation files
wp-content/themes/**/docs/          # Ignore theme docs folder
wp-content/plugins/**/README.md     # Ignore plugin documentation files
wp-content/plugins/**/docs/         # Ignore plugin docs folder
wp-content/themes/**/.env           # Ignore environment files in themes (sensitive info)
wp-content/plugins/**/.env          # Ignore environment files in plugins
